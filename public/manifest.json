{
    "manifest_version": 3,
    "name": "storage-genie",
    "version": "0.1.0",
    "description": "",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "sidePanel",
        "unlimitedStorage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/js/*.js",
                "assets/css/*.css",
                "icon-128.png",
                "icon-34.png"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}